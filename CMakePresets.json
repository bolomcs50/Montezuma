{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "tests",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_TESTING": true
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Ninja Debug build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Ninja Release build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "minimum-size",
      "displayName": "Minimum Size Release",
      "description": "Ninja Minimum Size Release build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },
    {
      "name": "debug-with-tests",
      "displayName": "Debug with Tests",
      "description": "Ninja Debug build with tests",
      "inherits": [
        "debug",
        "tests"
      ]
    },
    {
      "name": "release-with-tests",
      "displayName": "Release with Tests",
      "description": "Ninja Release build with tests",
      "inherits": [
        "release",
        "tests"
      ]
    },
    {
      "name": "windows-msvc2017-32",
      "displayName": "Visual Studio",
      "description": "Visual Studio build",
      "generator": "Visual Studio 15 2017",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "WINDOWS": true
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "testPresets": [
    {
      "name": "unit-tests",
      "displayName": "Unit Tests",
      "description": "A series of unit tests for Montezuma",
      "configurePreset": "release-with-tests",
      "output": {
        "outputOnFailure": true,
        "shortProgress": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "environment": {
        "CTEST_PARALLEL_LEVEL": "10"
      }
    }
  ]
}